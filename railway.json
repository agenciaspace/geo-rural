{
  "build": {
    "engine": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn backend.main:app --host 0.0.0.0 --port ${PORT}",
    "healthcheckPath": "/api/info",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure"
  },
  "env": {
    "PYTHON_VERSION": "3.12",
    "NODE_VERSION": "18"
  }
}